<%= form_with(model: platform) do |form| %>
  <% if platform.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(platform.errors.count, "error") %> prohibited this platform from being saved:</h2>
      <ul>
        <% platform.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :identifier, class: "form-label" %>
    <%= form.text_field :identifier, class: "form-control", readonly: true %>
  </div>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :slug, class: "form-label" %>
    <%= form.text_field :slug, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :url, class: "form-label" %>
    <%= form.text_field :url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :time_zone, class: "form-label" %>
    <%= form.text_field :time_zone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :privacy, class: "form-label" %>
    <%= form.text_field :privacy, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :protected, class: "form-label" %>
    <%= form.check_box :protected, class: "form-check-input" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
