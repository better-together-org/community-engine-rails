<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= t('person_platform_memberships.show.title') %></h1>
  <div>
    <% if policy(@person_platform_membership).edit? %>
      <%= link_to t('globals.edit'), edit_platform_person_platform_membership_path(@platform, @person_platform_membership), class: "btn btn-outline-primary" %>
    <% end %>
    <%= link_to t('globals.back'), platform_person_platform_memberships_path(@platform), class: "btn btn-secondary" %>
  </div>
</div>

<%= render partial: 'better_together/person_platform_memberships/person_platform_membership', locals: { person_platform_membership: @person_platform_membership } %>

<% if policy(@person_platform_membership).destroy? %>
  <div class="mt-4">
    <%= button_to t('actions.destroy'), [@platform, @person_platform_membership], 
                  method: :delete, 
                  class: "btn btn-danger",
                  data: { 
                    confirm: t('confirmations.destroy', resource: t('resources.person_platform_membership')) 
                  } %>
  </div>
<% end %>
