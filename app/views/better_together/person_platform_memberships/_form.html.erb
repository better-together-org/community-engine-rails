<%= form_with(model: [@platform, person_platform_membership]) do |form| %>
  <% if person_platform_membership.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(person_platform_membership.errors.count, "error") %> prohibited this person_platform_membership from being saved:</h2>

      <ul>
        <% person_platform_membership.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :member_id, class: "form-label" %>
    <%= form.collection_select :member_id, @available_people, :id, :name, 
                               { prompt: t('forms.select_option') }, 
                               { class: "form-select" } %>
  </div>

  <div class="field mb-3">
    <%= form.label :role_id, class: "form-label" %>
    <%= form.collection_select :role_id, @available_roles, :id, :name, 
                               { prompt: t('forms.select_option') }, 
                               { class: "form-select" } %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
