<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= resource_class.human_attribute_name(:identifier) %></th>
      <th><%= resource_class.human_attribute_name(:action) %></th>
      <th><%= resource_class.human_attribute_name(:target) %></th>
      <th><%= resource_class.human_attribute_name(:resource_type) %></th>
      <th><%= resource_class.human_attribute_name(:position) %></th>
      <th><%= resource_class.human_attribute_name(:protected) %></th>
      <th class="text-end"><%= t('globals.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'better_together/resource_permissions/resource_permission', 
               collection: resource_permissions, as: :resource_permission %>
  </tbody>
</table>
