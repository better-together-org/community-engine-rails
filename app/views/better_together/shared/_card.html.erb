
<%# locals: (entity: ) %>

<div id="<%= dom_id(entity) %>" class="col col-md-6 col-xl-4 entity-column mb-3 <%= dom_class(entity) %>">
  <div class="card entity h-100 shadow-sm border-0">
    <% if policy(entity).show? %>
      <%= link_to entity do %>
        <%= card_image_tag(entity) %>
      <% end %>
    <% else %>
      <%= card_image_tag(entity) %>
    <% end %>
    <div class="card-body d-flex justify-content-between align-items-start">
      <div>
        <h5 class="card-title mb-1">
          <% if policy(entity).show? %>
            <%= link_to entity.name, entity, class: 'text-primary text-decoration-none' %>
          <% else %>
            <%= entity.name %>
          <% end %>
        </h5>
        <%= yield if block_given? %>
      </div>
    </div>
  </div>
</div>
