<% content_for :page_title do %>
  <%= t('.page_title', default: 'Community Hub') %>
<% end %>

<div class="container my-3">
  <h1 class="mb-4"><%= t('.page_title', default: 'Community Hub') %></h1>

  <div class="row">
    <!-- User-specific section -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">
          <h5><%= t('.activity', default: 'Activity') %></h5>
        </div>
        <div class="card-body">
          <%= render_activities(@activities, :layout => "layouts/better_together/activity_wrapper") %>
        </div>
      </div>
    </div>

    <!-- Recent offers/requests -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= t('.recent_offers', default: 'Recent Offers') %></h5>
          <%= link_to t('.view_all_offers', default: 'View all'), joatu_offers_path, class: 'small text-decoration-none' %>
        </div>
        <div class="card-body">
          <% if @recent_offers.present? %>
            <div class="list-group list-group-flush">
              <%= render partial: 'better_together/joatu/offers/offer_list_item', collection: @recent_offers, as: :offer_list_item %>
            </div>
          <% else %>
            <p class="text-muted mb-0"><%= t('.no_offers', default: 'No recent offers') %></p>
          <% end %>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= t('.recent_requests', default: 'Recent Requests') %></h5>
          <%= link_to t('.view_all_requests', default: 'View all'), joatu_requests_path, class: 'small text-decoration-none' %>
        </div>
        <div class="card-body">
          <% if @recent_requests.present? %>
            <div class="list-group list-group-flush">
              <%= render partial: 'better_together/joatu/requests/request_list_item', collection: @recent_requests, as: :request_list_item %>
            </div>
          <% else %>
            <p class="text-muted mb-0"><%= t('.no_requests', default: 'No recent requests') %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

