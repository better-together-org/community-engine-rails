<div id="user_account_reports_content" class="mt-3" data-controller="better_together--user-account-reports">
  <% if user_account_reports.any? %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t('views.labels.id') %></th>
            <th><%= t('views.labels.created_at') %></th>
            <th><%= t('views.labels.creator') %></th>
            <th><%= t('views.labels.filters') %></th>
            <th><%= t('views.labels.file_format') %></th>
            <th><%= t('views.labels.actions') %></th>
          </tr>
        </thead>
        <tbody id="user_account_reports_table_body">
          <%= render user_account_reports %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div id="user_account_reports_empty_state" class="text-center py-5">
      <i class="fas fa-file-csv fa-3x text-muted mb-3" aria-hidden="true"></i>
      <h4 class="text-muted"><%= t('views.empty_states.user_account_reports.title') %></h4>
      <p class="text-muted"><%= t('views.empty_states.user_account_reports.description') %></p>
    </div>
  <% end %>
</div>

