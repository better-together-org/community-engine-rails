<!-- Downloads Tab Pane -->
<div class="tab-pane fade nav-tab-pane bt-tab-pane bt-tab-pane--resource <%= metrics_tab_styles[:downloads][:accent] %>" id="downloads" role="tabpanel" aria-labelledby="downloads-tab">
  <h2 class="h5 my-3 bt-tab-heading <%= metrics_tab_styles[:downloads][:accent] %>">
    <i class="<%= metrics_tab_styles[:downloads][:icon] %> bt-tab-icon" aria-hidden="true"></i>
    <span><%= t('better_together.metrics.reports.tabs.downloads') %></span>
  </h2>
  <div data-controller="better_together--tabs">
    <ul class="nav nav-tabs mb-3" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link disabled"
                type="button"
                role="tab"
                aria-disabled="true">
          <%= t('better_together.metrics.reports.tabs.charts_and_reports') %>
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link bt-tab-control bt-tab-accent--neutral active"
                id="downloads-charts-tab"
                data-bs-toggle="tab"
                data-bs-target="#downloads-charts"
                data-better_together--tabs-target="tab"
                type="button"
                role="tab"
                aria-controls="downloads-charts"
                aria-selected="true">
          <span><%= t('better_together.metrics.reports.tabs.charts') %></span>
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link bt-tab-control bt-tab-accent--neutral"
                id="downloads-reports-tab"
                data-bs-toggle="tab"
                data-bs-target="#downloads-reports"
                data-better_together--tabs-target="tab"
                type="button"
                role="tab"
                aria-controls="downloads-reports"
                aria-selected="false">
          <span><%= t('better_together.metrics.reports.tabs.reports') %></span>
        </button>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade show active bt-tab-pane bt-tab-pane--action bt-tab-accent--neutral"
            id="downloads-charts"
            role="tabpanel"
            aria-labelledby="downloads-charts-tab"
            data-controller="better_together--metrics-charts"
            data-host-platform-name="<%= host_platform.name.parameterize %>">
        <div class="metrics-chart-block">
          <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
            <h2 class="mb-0"><%= t('better_together.metrics.reports.charts.downloads_by_file') %></h2>
            <%= render 'chart_action_toolbar', chart_name: 'downloadsChart' %>
          </div>
          <canvas class="metrics-chart"
                  data-better_together--metrics-charts-target="downloadsChart"
                  data-chart-data="<%= {labels: [], values: []}.to_json %>"
                  data-chart-label="<%= t('better_together.metrics.reports.csv_headers.downloads_by_file') %>"
                  data-axis-x-label="<%= t('better_together.metrics.reports.axis_labels.file') %>"
                  data-axis-y-label="<%= t('better_together.metrics.reports.axis_labels.downloads') %>">
          </canvas>

          <%= render 'datetime_filter',
              chart_type: 'downloadsChart',
              data_url: downloads_by_file_data_metrics_reports_path(locale: I18n.locale),
              min_date: @min_dates[:downloads] %>
        </div>
      </div>

      <div class="tab-pane fade bt-tab-pane bt-tab-pane--action bt-tab-accent--neutral"
            id="downloads-reports"
            role="tabpanel"
            aria-labelledby="downloads-reports-tab">
        <p class="text-muted"><%= t('better_together.metrics.reports.coming_soon') %></p>
      </div>
    </div>
  </div>
</div>
