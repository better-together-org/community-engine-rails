<% content_for :page_title do %>
  <%= @page.title %>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div class="col">
      <h1><%= @page.title %></h1>
      <p><%= @page.content.html_safe %></p>

      <% if params[:path].blank? %>
        <%= link_to 'Edit', edit_page_path(@page), class: 'btn btn-secondary' %>
        <%= link_to 'Back to List', pages_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
