<div class="container mt-3">
  <h1>Pages</h1>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Slug</th>
            <th>URL</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= page.title %></td>
              <td><%= page.slug %></td>
              <td><%= link_to page.url, page.url %></td>
              <td><%= page.published ? 'Published' : 'Draft' %></td>
              <td>
                <%= link_to 'Show', page_path(page), class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Edit', edit_page_path(page), class: 'btn btn-secondary btn-sm' %>
                <%= link_to 'Destroy', page_path(page), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Page', new_page_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
