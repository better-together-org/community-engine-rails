<!-- app/views/messages/_form.html.erb -->
<%= form_with(model: [conversation, message], local: false, html: { id: "new_message", data: { controller: "message-form" } }) do |form| %>
  <div class="input-group">
    <%= form.text_area :content, class: 'form-control', rows: 1, placeholder: 'Type your message...', required: true, data: { target: "message-form.content" } %>
    <button class="btn btn-primary" type="submit"><i class="bi bi-send"></i> Send</button>
  </div>
<% end %>
