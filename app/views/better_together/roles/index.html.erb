<div class="container mt-3">
  <h1>Roles</h1>
  <% if policy(::BetterTogether::Role.new).create? %>
    <%= link_to 'New Role', new_role_path, class: 'btn btn-success' %>
  <% end %>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>Identifier</th>
            <th>Name</th>
            <th>Description</th>
            <th>Resource Type</th>
            <th>Position</th>
            <th>Protected</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @roles.each do |role| %>
            <%= render 'role', role: role %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
