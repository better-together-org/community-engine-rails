<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title mb-3"><%= @geography_state.name %></h3>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Identifier:</strong></div>
        <div class="col-md-9"><%= @geography_state.identifier %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Name:</strong></div>
        <div class="col-md-9"><%= @geography_state.name %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Description:</strong></div>
        <div class="col-md-9"><%= @geography_state.description %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>ISO Code:</strong></div>
        <div class="col-md-9"><%= @geography_state.iso_code %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Slug:</strong></div>
        <div class="col-md-9"><%= @geography_state.slug %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Protected:</strong></div>
        <div class="col-md-9"><%= @geography_state.protected ? 'Yes' : 'No' %></div>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <% if policy(@geography_state).edit? %>
      <%= link_to "Edit this state", edit_geography_state_path(@geography_state), class: "btn btn-primary me-2" %>
    <% end %>
    
    <%= link_to "Back to states", geography_states_path, class: "btn btn-secondary me-2" %>
    
    <% if policy(@geography_state).destroy? %>
      <%= button_to "Destroy this state", @geography_state, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>