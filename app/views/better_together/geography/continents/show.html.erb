<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title mb-3"><%= @geography_continent.name %></h3>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Identifier:</strong></div>
        <div class="col-md-9"><%= @geography_continent.identifier %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Name:</strong></div>
        <div class="col-md-9"><%= @geography_continent.name %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Description:</strong></div>
        <div class="col-md-9"><%= @geography_continent.description %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Slug:</strong></div>
        <div class="col-md-9"><%= @geography_continent.slug %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Protected:</strong></div>
        <div class="col-md-9"><%= @geography_continent.protected ? 'Yes' : 'No' %></div>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <h4>Countries in <%= @geography_continent.name %></h4>
    <ul>
      <% @geography_continent.countries.each do |country| %>
        <li>
          <%= link_to country.name, geography_country_path(country) %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="mt-3">
    <% if policy(@geography_continent).edit? %>
      <%= link_to "Edit this continent", edit_geography_continent_path(@geography_continent), class: "btn btn-primary me-2" %>
    <% end %>
    
    <%= link_to "Back to continents", geography_continents_path, class: "btn btn-secondary me-2" %>
    
    <% if policy(@geography_continent).destroy? %>
      <%= button_to "Destroy this continent", @geography_continent, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
