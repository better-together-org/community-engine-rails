<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title mb-3"><%= @geography_country.name %></h3>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Identifier:</strong></div>
        <div class="col-md-9"><%= @geography_country.identifier %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Name:</strong></div>
        <div class="col-md-9"><%= @geography_country.name %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Description:</strong></div>
        <div class="col-md-9"><%= @geography_country.description %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>ISO Code:</strong></div>
        <div class="col-md-9"><%= @geography_country.iso_code %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Slug:</strong></div>
        <div class="col-md-9"><%= @geography_country.slug %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3"><strong>Protected:</strong></div>
        <div class="col-md-9"><%= @geography_country.protected ? 'Yes' : 'No' %></div>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <h4>States in <%= @geography_country.name %></h4>
    <ul>
      <% @geography_country.states.each do |state| %>
        <li>
          <%= link_to state.name, geography_state_path(state) %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="mt-3">
    <% if policy(@geography_country).edit? %>
      <%= link_to "Edit this country", edit_geography_country_path(@geography_country), class: "btn btn-primary me-2" %>
    <% end %>
    
    <%= link_to "Back to countries", geography_countries_path(@geography_continent, locale: I18n.locale), class: "btn btn-secondary me-2" %>
    
    <% if policy(@geography_country).destroy? %>
      <%= button_to "Destroy this country", [@geography_country], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>