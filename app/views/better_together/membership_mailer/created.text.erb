<%= t('.greeting', name: @recipient.name) %>

<%= t('.message', joinable_type: @joinable_type, joinable_name: @joinable_name, role_name: @role.name) %>

<% if @joinable_url.present? %>
<%= t('.view_joinable', joinable_type: @joinable_type) %>:
<%= @joinable_url %>
<% end %>

<%= t('.permissions_summary_heading') %>
<% if @permission_summary[:labels].any? %>
<% @permission_summary[:labels].each do |label| %>
- <%= label %>
<% end %>
<% if @permission_summary[:remaining].positive? %>
- <%= t('.permissions_summary_more', count: @permission_summary[:remaining]) %>
<% end %>
<% else %>
<%= t('.permissions_summary_none') %>
<% end %>

<%= t('.signature_text', joinable_name: @joinable_name) %>
