<!-- Navbar -->
<nav id="main-nav" class="navbar navbar-expand-lg shadow-sm">
  <div class="container">
    <%= render 'layouts/better_together/navbar_brand' %>

    <!-- Social Media Accounts (visible on large screens) -->
    <div class="ms-auto me-3">
      <%= render_host_community_social_media_accounts %>
    </div>

    <!-- Toggler for mobile view -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="<%= t('navbar.toggle_navigation') %>">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <!-- Right-aligned nav items -->
      <ul class="navbar-nav ms-auto text-center">
        <!-- ... other nav items ... -->

        <% if platform_header_nav_items.any? %>
          <%= render 'better_together/navigation_items/navigation_items', navigation_items: platform_header_nav_items %>
        <% end %>

        <% if permitted_to?('manage_platform') && platform_host_nav_items.any? %>
          <%= render 'better_together/navigation_items/navigation_items', navigation_items: platform_host_nav_items %>
        <% end %>

        <%= yield :editor_status if content_for? :editor_status %>

        <!-- Search Icon -->
        <li class="nav-item search" data-bs-toggle="tooltip" title="<%= t('navbar.search_tooltip') %>">
          <a class="nav-link" href="#search" data-bs-toggle="collapse" data-bs-target="#navbarSearch, #navbarNavDropdown" aria-expanded="false" aria-controls="navbarSearch">
            <i class="fas fa-search"></i>
          </a>
        </li>

        <!-- User Auth Nav Item -->
        <% if user_signed_in? %>
          <li class="nav-item notifications" data-bs-toggle="tooltip" title="<%= t('navbar.notifications_tooltip') %>">
            <a class="nav-link position-relative" href="<%= notifications_path %>">
              <i class="fa fa-bell"></i>
              <%= unread_notification_count %>
            </a>
          </li>

          <!-- If user is signed in, show avatar and name -->
          <li id="user-nav" class="nav-item dropdown" data-bs-toggle="tooltip" title="<%= t('navbar.user_nav_tooltip') %>">
            <a class="nav-link dropdown-toggle" href="#" id="userNavbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%# Display avatar and name inline %>
              <%= profile_image_tag(current_identity, class: 'user-nav') %>
              <span class="identity-name"><%= current_identity.name %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="userNavbarDropdownMenuLink">
              <li class="d-flex flex-column align-items-start mb-3 dropdown-item">
                <strong><%= current_user.email %></strong>
              </li>
              <li>
                <%= link_to t('navbar.my_profile'), person_my_profile_path(person_id: current_person.slug), class: "my-profile dropdown-item ", data: { identifier: 'my-profile' } %>
              </li>
              <li><%= link_to t('navbar.conversations'), conversations_path, class: "dropdown-item", data: { identifier: 'conversations' } %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to t('navbar.log_out'), destroy_user_session_path, data: { turbo_method: :delete, identifier: 'sign-out' }, class: "dropdown-item text-danger" %></li>
            </ul>
          </li>
        <% else %>
          <!-- If user is not signed in, show 'Sign In' -->
          <li class="nav-item">
            <%= link_to t('navbar.sign_in'), new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>

        <%= render 'layouts/better_together/locale_switcher' %>
      </ul>
    </div>
  </div>
</nav>

<!-- Hidden Search Form below navbar -->
<div class="collapse <%= 'show w-100 position-static' if current_page?(search_path) %>" id="navbarSearch">
  <div class="container mt-3">
    <%= render 'better_together/shared/search_bar' %>
  </div>
</div>
