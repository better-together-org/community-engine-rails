
<!-- Email-safe centered table layout for header -->

<table id="main-nav" class="mailer shadow-sm py-4 row-gap-1" width="100%" cellpadding="0" cellspacing="0" border="0" align="center" style="background: #fff; border-collapse: collapse;">
  <tr>
    <td class="container-fluid justify-content-center" align="center" style="padding-top: 24px; padding-bottom: 16px;">
      <!-- Brand/logo -->
      <%= render 'layouts/better_together/navbar_brand' %>
    </td>
  </tr>
  <tr>
    <td class="container-fluid text-center" align="center">
      <% platform_header_nav_items.each_with_index do |nav_item, index| %>
        <%= link_to nav_item, nav_item.url %><% if index < (platform_header_nav_items.size - 1) %> | <% end %>
      <% end %>
    </td>
  </tr>
</table>
